# Limite de requisições por IP (por 15 minutos)
API_RATE_LIMIT=100

# ====================================================================
# CONFIGURAÇÃO DE LOGS
# ====================================================================

# Nível de log
LOG_LEVEL=info

# ====================================================================
# CONFIGURAÇÃO RAILWAY
# ====================================================================

# URL base da aplicação (Railway define automaticamente)
RAILWAY_PUBLIC_DOMAIN=

# URL do banco de dados (se necessário)
